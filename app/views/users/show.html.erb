<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>METTRE</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="app/assets/stylesheets/new.css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
  </head>
  <body>
 <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<div class = "heading">
      <header>
      <form method="get" action="#" class="search_container">
        <input type="text" size="25" class = "input-text font-awesome" placeholder="&#xF002;　fashion検索">
      </form>
        <h1 class = "title"><a href= "/"></a></h1>
      <div class = "navbar">
        <ul class='nav-lists'>
          <% if user_signed_in? %>
             <li><%= link_to 'トップページ', "/", class: "nav ser-nickname" %></li> 
             <li><%= link_to 'ログアウト', "/users/sign_out", method: :delete, class: "nav ogout" %></li>
           <% else %>
            <li><%= link_to 'ログイン', "/users/sign_in", class: "nav login" %></li>
            <li><%= link_to '新規会員登録', "/users/sign_up", class: "nav sign-up" %></li>
          <% end %> 
        </ul>
      </div>
      </header>
    </div>

  <main>
    <div class = "profile">
      <div class = "user-profile">
        <p class = "user-nickname"><%= @user.nickname%></p>
        <p class = "user-username">@<%= @user.username%></p>
      </div>
      <div class="edit-user">
         <% if current_user === @user %>
          <%= link_to 'プロフィール編集',  edit_user_registration_path(@user),method: :get, class: "btn-square-shadow"%>
         <% end %>
      </div>
    </div>
    <div class = "main-fashion">
      <div class = "new-fashion">
        <% if current_user === @user %>
          <%= link_to 'コーディネート投稿',  new_fashion_path(@fashion),method: :get, class: "btn-new btn-square-shadow"%>
         <% end %>
      </div>
      <%# 内容 %>
    <div class = "tab-container">
      <div class="tabs">
        <input id="all" type="radio" name="tab_item" checked>
          <label class="tab_item" for="all">ALL</label>
        <input id="programming" type="radio" name="tab_item">
          <label class="tab_item" for="programming">MEN</label>
        <input id="design" type="radio" name="tab_item">
          <label class="tab_item" for="design">WOMEN</label>
        <input id="design" type="radio" name="tab_item">
          <label class="tab_item" for="design">WOMEN</label>
      </div>
     </div>
      <%# 内容 %>
    </div>
  </main>


  <%# フッター %>
   <%= render "shared/footer"%>
  <%# フッター %>
  </body>
</html>