<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>METTRE</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="index.css">
  </head>
  <body>
    <%# ヘッダー %>
    <div class = "heading">
      <header>
      <form method="get" action="#" class="search_container">
        <input type="text" size="25" class = "input-text" placeholder="　fashion検索">
      </form>
        <h1 class = "title"><a href= "/"> <%= image_tag 'logo.png' %></a></h1>
      </header>
    </div>
    

    <%# タグ %>
    <main>
    <div class = "tab-container">
    <div class="tabs">
      <input id="all" type="radio" name="tab_item" checked>
        <label class="tab_item" for="all">ALL</label>
      <input id="programming" type="radio" name="tab_item">
      <label class="tab_item" for="programming">MEN</label>
        <input id="design" type="radio" name="tab_item">
      <label class="tab_item" for="design">WOMEN</label>
        <div class="tab_content" id="all_content">
          総合の内容がここに入ります
        </div>
        <div class="tab_content" id="programming_content">
          プログラミングの内容がここに入ります
        </div>
        <div class="tab_content" id="design_content">
          デザインの内容がここに入ります
        </div>
    </div>
    </div>
    </main>
    <%# タグ %>

  </body>
</html>